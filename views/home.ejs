<%- include("include/base.ejs") %>
<link rel="stylesheet" href="/css/home.css">
</head>
<%- include("include/header.ejs") %>

<main class="main">
        <% if (prods.length > 0) { %>
                    <% prods.forEach(product => { %>
                        <div class="wrapper_prodcuts">
                            <h1 class="textProduct"> <%= product.title %> </h1>
                            <p class="textProduct"> <%= product.price %> </p>
                        </div>
                    <% }) %>

            <% }else { %>
                <h1 style="color: aliceblue; font-size: 200px; text-align: center;">no products</h1>
                <% } %>
</main>

<%- include("include/end.ejs") %>